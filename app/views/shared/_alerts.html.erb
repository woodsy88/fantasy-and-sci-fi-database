<% if flash[:alert] %>
  <%= js add_gritter(flash[:alert], title: "FSFdb Alert", sticky: false) %>
<% elsif flash[:error] %>
  <%= js add_gritter(flash[:error], title: "FSFdb Error", sticky: false) %>
<% elsif flash[:success] %>
  <%= js add_gritter(flash[:success], title: "FSFdb Success", sticky: false) %>
<% else %>
  <%= js add_gritter(flash[:notice], title: "FSFdb", sticky: false, time: 1000) %>
<% end %>