<div class="container">
  <div class="row">
    <% @books.each do |book| %>
      <div class="col-md-4 d-flex">
      <div class="card" style="width: 100%;">
          <div class="card-body flex-fill">
            <div class="card-title">
              <div class="header-5"><%= book.title %></div>
            </div> 
              <p><%= truncate book.description, length: 150 %></p>

            </div>
            <div class="card-footer">
              <%= link_to 'View book', book_path(book.id), class: "btn btn-primary btn-block" %>
            </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

