
<% if user_signed_in? && current_user.likes?(book) %>
  <%= link_to 'Unlike', book_likes_path(book), method: :delete, remote: true %>
<% elsif user_signed_in? %>
  <%= link_to 'Like', book_likes_path(book), method: :post, remote: true %>
<% end %>

<div><%= pluralize(book.likes.count, "like") %></div>

<% book.likes.each do |like| %>
  <div><%= image_tag like.user.avatar_url, width: 20 %></div>
<% end %>